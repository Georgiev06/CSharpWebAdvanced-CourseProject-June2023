@using OnlineShopSystem.Web.Areas.Admin.Models.User;
@model IEnumerable<UsersViewModel>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <form method="post" asp-area="Admin" asp-controller="Admin" asp-action="MakeAdmin">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-outline-primary">Make Admin</button>
                    </form>

                    <form method="post" asp-area="Admin" asp-controller="Admin" asp-action="DeleteUser">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>